<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" type="text/css" href="/produtos/produto.css">
    <!-- Inclua o link para Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <title>Listagem de Produtos</title>
</head>

<body>

    <%- include("../partes/navbar", { codLogado: codLogado}) %>



        <div class="container">
            <% for (var i=0; i < JProdutos.length; i++) { %>
                <div class="card">
                    <form action="/carrinho_produtos" method="post">

                        <%if(JProdutos[i].img == null){%>
                            <img src="https://via.placeholder.com/300x200" alt="Product 1">
                            <%}else{%>
                                <img src="/uploads/<%=JProdutos[i].img%>" class="img-responsive img-rounded center-block" alt="imagem produto">
                            <%}%>

                        
                        <div class="card-content">
                            <h2 class="product-title">
                                <a href='./detalhe_produto?id_produto=<%=JProdutos[i].IDProduto%>'>
                                    <%= JProdutos[i].NomeProduto %>
                                </a>
                            </h2>
                            <p class="product-description">
                                Marca: <%= JProdutos[i].Marca %>
                            </p>
                            <p class="product-price">
                                R$: <%= JProdutos[i].Preco %>
                                    <input type="hidden" name="IDProduto" value="<%=JProdutos[i].IDProduto%>">
                                    <input type="hidden" name="IDCliente" value="<%=codLogado%>">
                            </p>

                            <%-include("../partes/button_carrinho", {JProduto: JProdutos[i], i: i })%>
                        </div>
                    </form>

                </div>
                <% } %>
        </div>

